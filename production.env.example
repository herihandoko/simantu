# SIMANTU Production Environment Configuration
# Copy this file to server/.env and update the values

# Environment
NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_USER=simantu_user
DB_PASSWORD=simantu_password_2024
DB_NAME=simantu_db

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters

# Server Configuration
PORT=5001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Security Configuration
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/pm2/simantu-combined.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/simantu/uploads

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
